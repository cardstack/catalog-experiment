  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start File Daemon",
      "cwd": "${workspaceRoot}/packages/app",
      "env": {},
      "program": "${workspaceRoot}/packages/file-daemon/index.js",
      "args": ["-d", "."]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/packages/app"
    }
  ]
}
