{
  "name": "catalog-experiment",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "_comment_": "We can't hoist these packages because they contain types and those types or their dependencies pull in <ref lib='dom'>, and TS discovers all of them across all monorepo packages.",
    "nohoist": [
      "**/@types/superagent",
      "**/@types/supertest",
      "**/@types/ember",
      "**/@types/ember/**",
      "**/@types/ember-qunit",
      "**/@types/ember-qunit/**",
      "**/@types/ember__test-helpers",
      "**/@types/ember__test-helpers/**",
      "**/@types/qunit",
      "**/@types/rsvp",
      "**/ember-load-initializers",
      "**/ember-load-initializers/**"
    ]
  },
  "private": true,
  "scripts": {
    "clean": "git clean -x -f",
    "build": "npm-run-all build:*",
    "build:file-daemon": "cd packages/file-daemon && tsc",
    "build:file-daemon-client": "cd packages/file-daemon-client && tsc",
    "build:builder-worker": "cd packages/builder-worker && tsc",
    "build:builder-dom": "cd packages/builder-dom && tsc",
    "build:builder-node": "cd packages/builder-node && tsc",
    "build:shared": "cd packages/shared && tsc",
    "build:loader": "cd packages/loader && tsc",
    "build:tarstream": "cd packages/tarstream && tsc",
    "build:ui": "cd packages/ui && tsc",
    "test": "npm-run-all test:*",
    "test:file-daemon": "cd packages/file-daemon && yarn test",
    "test:file-daemon-client": "cd packages/file-daemon-client && yarn test",
    "test:builder-worker": "cd packages/builder-worker && yarn test",
    "test:builder-node": "cd packages/builder-worker && yarn webpack && yarn qunit assets/node-test.js",
    "acceptance-test": "yarn acceptance-test:init && yarn acceptance-test:bundle && yarn acceptance-test:default-assigner && yarn acceptance-test:reset-test && yarn acceptance-test:maximum-assigner",
    "acceptance-test:init": "rm -rf ./test-working && mkdir ./test-working",
    "acceptance-test:bundle": "cd ./test-working && node ../packages/builder-node/bin/install.js --project=.. @babel/core",
    "acceptance-test:reset-test": "rm -rf ./test-working/dist",
    "acceptance-test:default-assigner": "cd ./test-working && node ../packages/builder-node/bin/build.js --project=../packages/test-app,http://build-output --project=../packages/test-lib,http://localhost:4200/test-lib/ --cdn ./working/cdn --overlay && testem ci -f ../testem.json -p 7358",
    "acceptance-test:maximum-assigner": "cd ./test-working && node ../packages/builder-node/bin/build.js --project=../packages/test-app,http://build-output --project=../packages/test-lib,http://localhost:4200/test-lib/ --assigner maximum --cdn ./working/cdn --overlay && testem ci -f ../testem.json -p 7358",
    "builder": "cd packages/builder-worker && yarn start",
    "serve": "cd packages/test-app && yarn start",
    "ui": "cd packages/ui && yarn start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "testem": "^3.1.0"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "volta": {
    "node": "14.5.0"
  }
}