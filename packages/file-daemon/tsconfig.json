{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "strict": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts"]
}
